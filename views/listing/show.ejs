<%  layout("layouts/boilerplate") -%>
<body>
   <br>
    <div class="row">
      <div class="col-8 offset-2">
        <h1><%= data.title%></h1>
       </div>
      <div class="card col-8 offset-2 show-card">
        <img src="<%= data.image.url %>" class="card-img-top show-image" alt="...">
        <div class="card-body">
          <p class="card-text"> 
            Owned By: <%= data.owner.username %><br>
            <%= data.description%> <br>
            <%= data.location %> <br>
            <%= data.country %> <br>
            <b>&#8377; <%= data.price.toLocaleString("en-IN") %></b></p>
        </div>
      </div>
    </div>
        <div class="button">
      <a href="/edit/<%= data._id %>" class="btn btn-danger col-1 offset-2 edit">Edit</a><br><br>
      <form action="/delete/<%= data._id%>?_method=DELETE" method="post">
     <button class="btn btn-dark  offset-4">Delete</button>
     </form>
    </div>
    
    <hr> 
    <div class="col-8 offset-2">
      <h3>Leave a Review</h3> 
      <form action="/review/<%= data._id %>" method="post" class="needs-validation" novalidate>
      <div class="mt-10">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" name="review[rating]" min="1" max="5" class="form-control" required>
      </div>
      <div>
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" class="form-control" cols="30" rows="6" required></textarea>
        <div class="invalid-feedback">Please Submit the comment</div>
      </div>
      <button class="btn btn-outline-secondary mt-2 mb-2">Submit</button>
    </form>
    <!-- </div> -->
    <!-- <div class="row"> -->
      <!-- <ul>
        <% for(let review of data.reviews){%>
          <li><%= review.comment %> <%= review.rating %> </li>       
          <%}%>
      </ul> -->
      <hr>
      <p><b>All Reviews</b></p>
      <% for(let review of data.reviews){%>
      <div class="card col-6 mb-3 ms-2 ">
        <div class="card-body">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %> <b><%= review.rating %> Star </b></p>
          <form action="/review/<%= data._id %>/delete/<%=review._id %>?_method=DELETE" method="post">
          <button class="btn btn-sm btn-dark">Delete</button>
          </form>  
        </div>
    </div>
    <% }%>
    </div>
  <!-- </div> -->
</body>