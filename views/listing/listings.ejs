<%  layout("layouts/boilerplate") -%>
<body>
   <!-- <%= success %> -->
    <!-- <h1>ALL LIST</h1> -->
     <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 1.5rem;
        opacity: 0.7;
      }
      .filter:hover{
        opacity: 1;
        cursor: pointer;
        text-decoration: underline;
      }
      .i {
        font-size: 1.5rem;
      }
      .filter p{
        font-size: 1rem;
      }
      .tax-toggle{
          border: 2px solid black; 
          border-radius: 1rem;
          height: 3.25rem;
          width:250px;       
          display: flex;
          justify-content: center;
          align-items: center;
      }
      .tax{
        display: none;
      }
      .dis{
       padding: 1rem;
       border: none;
      }
     </style>
     <div id="filters">
        <div class="filter">
          <div>
            <i class="fa-solid fa-fire i"></i>
          </div>
          <p>Treanding</p>
        </div>
        <div class="filter">
          <div>
            <i class="fa-solid fa-person-swimming i"></i>
          </div>
          <p>Amazing pools</p>
        </div>
        <div class="filter">
          <div>
            <i class="fa-solid fa-cow i"></i>
          </div>
          <p>Farms</p>
        </div>
        <div class="filter">
          <div>
            <i class="fa-solid fa-umbrella-beach i"></i>
          </div>
          <p>Beach</p>
        </div>
        <div class="filter">
          <div>
            <i class="fa-solid fa-igloo i"></i>
          </div>
          <p>Tiny homes</p>
        </div>
        <div class="filter">
          <div>
            <i class="fa-brands fa-fort-awesome i"></i>
          </div>
          <p>Castles</p>
        </div>
        <div class="filter">
          <div>
            <i class="fa-brands fa-bluesky i"></i>
          </div>
          <p>Luxe</p>
        </div>
        <div class="filter">
          <div>
            <i class="fa-solid fa-house-fire i"></i>
          </div>
          <p>Lakefron</p>
        </div>
        <div class="filter">
          <div>
            <i class="fa-regular fa-hospital i"></i>
          </div>
          <p>Rooms</p>
        </div>
        <div class="tax-toggle">
          <div class="form-check form-switch form-check-reverse">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
        <label class="form-check-label" for="flexSwitchCheckReverse">Display total before taxes</label>
        </div>
        </div>
      </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 l-container">
    <% for(let list of alllisting){%>
    <a href="/listing/<%= list._id %>" class="listing-link">
    <div class="card mb-3  dis" style="width: 25rem;">
      <img class="card-img-top" src="<%=list.image.url %>" alt="Card image cap"  style="height: 20rem;">
      <div class="card-body">
        <p class="card-text"><b><%=list.title %></b><br>
          &#8377 <%= list.price.toLocaleString("en-IN") %>
          &nbsp;&nbsp;<i class="tax">18%GST</i>
        </p>
      </div>
    </div>
  </a>
    <%  }%>
  </div>
    <!-- <ul>
     <% for(let list of alllisting){%> 
       <li><a href="/listing/<%= list._id %>"><%= list.title %></a></li>  
     <%  }%>
    
    </ul> -->


    <script>
      let taxeswitch=document.getElementById("flexSwitchCheckReverse");
      taxeswitch.addEventListener('click',()=>{
        let tax=document.getElementsByClassName("tax");
        for(var taxes of tax){
            if(taxes.style.display!="inline"){
                taxes.style.display="inline"
            }else{
              taxes.style.display="none"
            }
        }
      })
    </script>
</body>