<%  layout("layouts/boilerplate") -%>
<body>
    <div class="row sign">
      <div class="col-8 offset-2">
        <br>
        <h1>Sign-Up</h1>
        <form method="post" action="/signup" novalidate class="needs-validation">
              <div>
                <label for="username" class="form-label">Username:</label>
               <input type="username" name="username" class="form-control" required>
               <div class="invalid-feedback">username should be valid</div>
              </div>
              <div>
                <label for="email" class="form-label">Email:</label>
               <input type="email" name="email" class="form-control" required>
               <div class="invalid-feedback">email should be valid</div>
              </div>
              <div>
                <label for="password" class="form-label">Password:</label>
               <input type="password" name="password" class="form-control" required>
               <div class="invalid-feedback">password should be valid</div>
              </div>
              <button class="btn btn-success mt-2 mb-2">Submit</button>
        </form>
      </div>
    </div>
</body> 